doctype html
html(lang='en')
  head
    title= title
    link(rel="stylesheet", type="text/css", href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet", type="text/css", href="/stylesheets/style.css")
  body
    h1 #{title}
    h2 TDT4245 - NTNU
    
    p.text-info

    form.form-horizontl
      legend Please, enter your name to join a game
      div.input-append
        input#name.span3.input-medium(type='text', name='name', placeholder='Enter your Name')
        button#joinGame.btn Join the Game

    div#playersPanel
      h3 Ready to play? 
      h4 Here's the players list
      ul
      p#counter

    script(type="text/javascript", src='/lib/jquery-2.1.1.js')
    script(type="text/javascript", src="/socket.io/socket.io.js")
    script(type="text/javascript", src='/scripts/main.js')
